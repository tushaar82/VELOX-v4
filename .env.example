# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=velox_algotrading
DB_USER=velox_user
DB_PASSWORD=your_secure_password

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092,localhost:9093,localhost:9094
KAFKA_ZOOKEEPER=localhost:2181
KAFKA_TOPIC_MARKET_DATA=market-data
KAFKA_TOPIC_INDICATORS=indicators
KAFKA_TOPIC_SIGNALS=signals
KAFKA_TOPIC_ORDERS=orders
KAFKA_TOPIC_POSITIONS=positions
KAFKA_TOPIC_ALERTS=alerts

# Java Services Configuration
MARKET_DATA_PROCESSOR_PORT=8081
INDICATORS_CALCULATOR_PORT=8082
RISK_MANAGEMENT_PORT=8083

# API Gateway Configuration
API_GATEWAY_PORT=8000
API_GATEWAY_HOST=localhost

# Frontend Configuration
FRONTEND_PORT=3000
FRONTEND_HOST=localhost

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRATION=86400
JWT_REFRESH_EXPIRATION=604800

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring Configuration
ACTUATOR_ENDPOINTS=/actuator
METRICS_ENABLED=true
HEALTH_CHECK_ENABLED=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE_PATH=./logs/

# Development Configuration
NODE_ENV=development
JAVA_ENV=development
DEBUG=true

# External API Configuration
BROKER_API_TIMEOUT=30000
MARKET_DATA_API_TIMEOUT=10000

# Performance Configuration
CONNECTION_POOL_SIZE=20
KAFKA_PRODUCER_BATCH_SIZE=16384
KAFKA_PRODUCER_LINGER_MS=5
KAFKA_CONSUMER_POLL_TIMEOUT=1000